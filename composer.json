{
    "name": "darklion/head-first-design-patterns",
    "description": "Practics from book \"Head First. Design patterns\", rewritten in PHP",
    "type": "project",
    "authors": [
        {
            "name": "Leo Prusov"
        }
    ],
    "require": {
        "php": "^8.4",
        "symfony/console": "^7.3",
        "symfony/event-dispatcher": "^7.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48",
        "friendsofphp/php-cs-fixer": "^3.86",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.3"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "HeadFirstDesignPatterns\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse --memory-limit=512M",
        "fixer": "vendor/bin/php-cs-fixer fix --diff --config=.php-cs-fixer.php",
        "lint": [
            "composer fixer",
            "composer normalize"
        ]
    }
}
